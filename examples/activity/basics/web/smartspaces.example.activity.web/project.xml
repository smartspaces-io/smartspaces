<?xml version="1.0"?>
<project type="activity" builder="java">
  <name>Web Java Activity Example</name>
  <description>
    An example Java-based web activity that uses web sockets to communicate between the
    Live Activity and the browser application.
  </description>

  <identifyingName>
    smartspaces.example.activity.web
  </identifyingName>
  <version>1.0.0</version>

  <activity type="smartspaces_native">
    <name>smartspacesExampleActivityWeb</name>
    <class>
      io.smartspaces.activity.example.web.JavaWebExampleActivity
    </class>

    <configuration>
      <property name="space.activity.webapp.web.server.port" value="9102" />

      <property name="space.activity.webapp.content.location" value="webapp" />
      <property name="space.activity.webapp.url.initial" value="index.html" />
      <property name="space.activity.webapp.url.query_string">
        <value>test</value>
      </property>
      <property name="space.activity.webapp.browser.debug" value="true" />

      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>
</project>
