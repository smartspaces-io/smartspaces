<?xml version="1.0"?>
<project type="activity" builder="java">
  <name>Simple Hello World Activity Build Example in Java</name>
  <description>
    A very simple project that demonstrates building with tasks defined in the
    project.xml. A class necessary for compiling is generated by a shell script.
  </description>

  <identifyingName>
    interactivespaces.example.build.activity.hello
  </identifyingName>
  <version>1.0.0</version>

  <activity type="interactivespaces_native">
    <name>interactivespacesExampleActivityHello</name>
    <class>
      interactivespaces.activity.example.hello.HelloActivity
    </class>

    <configuration>
      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>

  <tasks>
    <task name="build" position="before" type="native">
      <native>
        <executable-path>${project.home}/src/main/build/isbuild-pre.sh</executable-path>
        <arg>${project.home}/build/generated-src/main/java</arg>
      </native>
    </task>
    <task name="build" position="after" type="native">
      <native>
        <executable-path>${project.home}/src/main/build/isbuild-mid.sh</executable-path>
        <arg>${project.home}/build/generated-src/main/resources</arg>
        <arg>foo</arg>
      </native>
    </task>
     <task name="build" position="after" type="native">
      <native>
      <template><![CDATA[#!/bin/bash

GREETING=Hello
echo ${"$"}{GREETING}, my project home is ${"$"}{project.home}

echo ${project.identifyingName} version ${project.version}

<#list project.configurationProperties as property>
echo      property ${property.name}
</#list>
      ]]></template>
      </native>
    </task>
     <task name="build" position="after" type="native">
      <native>
      <template source="${project.home}/src/main/build/templateexample.ftl"/>
      </native>
    </task>
  </tasks>
</project>
