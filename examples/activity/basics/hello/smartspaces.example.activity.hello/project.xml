<?xml version="1.0"?>
<project type="activity" language="java">
  <name>Simple Hello World Activity Example in Java</name>
  <description>
    A very simple Java-based activity that just logs at the current log level its
    callback messages.
  </description>

  <identifyingName>
    smartspaces.example.activity.hello
  </identifyingName>
  <version>1.0.0</version>

  <activity type="smartspaces_native">
    <name>smartspacesExampleActivityHello</name>
    <class>
      io.smartspaces.activity.example.hello.HelloActivity
    </class>

    <configuration>
      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>
</project>
