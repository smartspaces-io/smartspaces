<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="1.0"
>
  <persistence-unit name="SmartSpaces" transaction-type="RESOURCE_LOCAL">
    <provider>
      org.apache.openjpa.persistence.PersistenceProviderImpl
    </provider>

    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaActivity
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaActivityConfiguration
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaActivityConfigurationParameter
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaActivityDependency
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaActivityMetadataItem
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaLiveActivity
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaLiveActivityMetadataItem
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaLiveActivityGroup
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaLiveActivityGroupMetadataItem
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaGroupLiveActivity
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpace
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpaceMetadataItem
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpaceController
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpaceControllerConfigurationParameter
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpaceControllerConfiguration
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaSpaceControllerMetadataItem
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaNamedScript
    </class>
    <class>
      io.smartspaces.master.server.services.internal.jpa.domain.JpaNamedScriptMetadataItem
    </class>
    
    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema" />
    </properties>
  </persistence-unit>
</persistence>
