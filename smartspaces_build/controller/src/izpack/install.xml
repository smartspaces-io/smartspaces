<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
  <!-- The info section. The meaning of the tags should be natural ... -->
  <info>
    <appname>@{app.name}</appname>
    <appversion>@{app.version}</appversion>
    <appsubpath>smartspaces/controller</appsubpath>
    <authors>
      <author name="Keith M. Hughes" email="" />
    </authors>
    <url>http://www.smartspaces.io</url>
    <javaversion>1.7</javaversion>
  </info>

  <dynamicvariables>
    <variable name="smartspaces.version" value="@{app.version}" />
    <variable name="smartspaces.platform.os" value="linux" condition="izpack.linuxinstall" />
    <variable name="smartspaces.platform.os" value="windows" condition="izpack.windowsinstall" />
    <variable name="smartspaces.platform.os" value="osx" condition="izpack.macinstall" />

    <variable name="smartspaces.controller.uuid.final" value="${smartspaces.controller.uuid}"
      condition="manualconfig" />
    <variable name="smartspaces.controller.name.final" value="" condition="manualconfig" />
    <variable name="smartspaces.controller.description.final" value="" condition="manualconfig" />

    <variable name="smartspaces.controller.uuid.final" value="" condition="!manualconfig" />
    <variable name="smartspaces.controller.name.final" value="${smartspaces.controller.name}"
      condition="!manualconfig" />
    <variable name="smartspaces.controller.description.final" value="${smartspaces.controller.description}"
      condition="!manualconfig" />

    <variable name="smartspaces.container.type" value="controller" />
    <variable name="ros.node.name" value="${smartspaces.hostid}" />
  </dynamicvariables>

  <!-- The gui preferences indication. Sets the installer window to 640x480. It will be able to change 
    the size. -->
  <guiprefs width="640" height="480" resizable="yes" />

  <!-- The locale section. Asks here to include the English and French langpacks. -->
  <locale>
    <langpack iso3="eng" />
  </locale>

  <!-- The resources section. The ids must be these ones if you want to use the LicencePanel and/or the 
    InfoPanel. -->
  <resources>
    <res id="HTMLInfoPanel.info" src="Readme.html" parse="yes" />
    <res id="LicencePanel.licence" src="LICENSE.txt" />
    <res id="userInputSpec.xml" src="user_input_spec.xml" parse="yes" type="xml" />
    <res id="userInputLang.xml_eng" src="userInputLang.xml_eng" />
  </resources>

  <conditions>
    <condition type="variable" id="manualconfig">
      <name>smartspaces.controller.manualconfig</name>
      <value>true</value>
    </condition>
  </conditions>

  <!-- The panels section. We indicate here which panels we want to use. The order will be respected. -->
  <panels>
    <!-- <panel classname="org.smartspaces.installer.izpack.panels.MyHelloPanel"/> -->
    <panel classname="CheckedHelloPanel" id="hellopanel" />
    <panel classname="HTMLInfoPanel" id="infopanel" encoding="ISO-8859-1" />
    <panel classname="LicencePanel" />
    <panel classname="UserInputPanel" id="userinputpanel.order.0" />
    <panel classname="UserInputPanel" id="userinputpanel.order.1" condition="manualconfig" />
    <panel classname="UserInputPanel" id="userinputpanel.order.2" condition="!manualconfig" />
    <panel classname="UserInputPanel" id="userinputpanel.order.3" />
    <panel classname="UserInputPanel" id="userinputpanel.order.4" />
    <panel classname="TargetPanel" />
    <panel classname="PacksPanel" />
    <panel classname="InstallPanel" />
    <panel classname="FinishPanel" />
  </panels>

  <!-- The packs section. We specify here our packs. -->
  <packs>
    <pack name="Base" required="yes">
      <description>The base files</description>

      <file src="Readme.html" targetdir="$INSTALL_PATH" override="true" />
      <file src="LICENSE.txt" targetdir="$INSTALL_PATH" override="true" />
      <file src="LICENSE.thirdparties.txt" targetdir="$INSTALL_PATH" override="true" />
      <file src="NOTICE.txt" targetdir="$INSTALL_PATH" override="true" />

      <file src="bin" targetdir="$INSTALL_PATH" override="true" />
      <file src="config" targetdir="$INSTALL_PATH" override="askfalse" />
      <file src="logs" targetdir="$INSTALL_PATH" />
      <file src="bootstrap" targetdir="$INSTALL_PATH" override="true" />
      <file src="lib" targetdir="$INSTALL_PATH" override="true" />
      <file src="controller" targetdir="$INSTALL_PATH" />
      <file src="smartspaces-launcher-@{app.version}.jar" targetdir="$INSTALL_PATH"
        override="true" />

      <parsable targetfile="$INSTALL_PATH/bin/isstartup" type="shell" />
      <executable targetfile="$INSTALL_PATH/bin/isstartup" stage="never" />
      <parsable targetfile="$INSTALL_PATH/bin/isshutdown" type="shell" />
      <executable targetfile="$INSTALL_PATH/bin/isshutdown" stage="never" />
      <parsable targetfile="$INSTALL_PATH/bin/isharshshutdown" type="shell" />
      <executable targetfile="$INSTALL_PATH/bin/isharshshutdown" stage="never" />

      <parsable targetfile="$INSTALL_PATH/config/system/log4j.properties" />
      <parsable targetfile="$INSTALL_PATH/config/container.conf" type="shell" />
      <parsable targetfile="$INSTALL_PATH/config/smartspaces/smartspaces.conf"
        type="shell" />
      <parsable targetfile="$INSTALL_PATH/config/smartspaces/controllerinfo.conf"
        type="shell" />
      <parsable targetfile="$INSTALL_PATH/config/smartspaces/controller.conf" type="shell" />
      <file src="extras" targetdir="$INSTALL_PATH" />
    </pack>
  </packs>
</installation>
