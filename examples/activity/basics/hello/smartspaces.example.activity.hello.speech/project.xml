<?xml version="1.0"?>
<project type="activity" language="java">
  <name>Simple Hello Speech Activity Example</name>
  <description>
    A speech synthesis activity that speaks some of the Activity lifecycle events.
  </description>

  <identifyingName>
    smartspaces.example.activity.hello.speech
  </identifyingName>
  <version>1.0.0</version>
  
  <activity type="smartspaces_native">
    <name>smartspacesExampleActivityHelloSpeech</name>
    <class>
      io.smartspaces.example.activity.hello.speech.HelloSpeechExampleActivity
    </class>

    <configuration>
      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>
  
</project>
