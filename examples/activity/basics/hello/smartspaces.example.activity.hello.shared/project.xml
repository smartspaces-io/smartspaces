<?xml version="1.0"?>
<project type="activity" builder="java">
  <name>Simple Hello World Shared Base-Class Activity Example in Java</name>
  <description>
    A very simple Java-based activity that just logs at the current log level its
    callback messages.
    Uses a shared source file specified in the project description.
  </description>

  <identifyingName>
    smartspaces.example.activity.hello.shared
  </identifyingName>
  <version>1.0.0</version>

  <activity type="smartspaces_native">
    <name>smartspacesExampleActivityHelloShared</name>
    <class>
      io.smartspaces.activity.example.hello.HelloActivity
    </class>

    <configuration>
      <property name="space.activity.log.level" value="info" />
    </configuration>
  </activity>

  <sources>
    <source sourceDirectory="../common/java" />
  </sources>

  <resources>
    <resource sourceFile="src/main/resources/resource.txt" />
  </resources>

</project>
