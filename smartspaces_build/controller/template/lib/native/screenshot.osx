#!/bin/bash

SCREENSHOT_DIR=$1
SCREENSHOT_FILE=$2
SCREENSHOT_FILE_EXTENSION=$3

cd "${SCREENSHOT_DIR}"

OUTFILES=
for DISPLAY_INDEX in {0..11}; do
  DISPLAY=$(printf %02d "${DISPLAY_INDEX}")
  OUTFILES="${OUTFILES} ${SCREENSHOT_FILE}-disp${DISPLAY}.${SCREENSHOT_FILE_EXTENSION}"
done

screencapture -C ${OUTFILES}
